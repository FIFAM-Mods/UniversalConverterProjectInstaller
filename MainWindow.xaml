                            <RadioButton Name="RbBadges1" GroupName="Portraits" Content="{x:Static res:Resource.INSTALLOPTION_SELECT}" FontSize="14" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" Padding="2,-1,0,0" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Center" >
