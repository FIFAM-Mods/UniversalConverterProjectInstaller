                        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Width="340" Height="232" Stroke="#FFA0A0A0" Margin="30,160,0,0" />
                        <Image Source="badges_1.png" Stretch="Fill" Margin="38,168,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="326" Height="160" />
